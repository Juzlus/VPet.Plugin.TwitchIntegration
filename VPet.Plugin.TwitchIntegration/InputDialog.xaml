<Window x:Class="VPet.Plugin.TwitchIntegration.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ll="clr-namespace:LinePutScript.Localization.WPF;assembly=LinePutScript.Localization.WPF"
        xmlns:pu="clr-namespace:Panuon.WPF.UI;assembly=Panuon.WPF.UI"
        Title="{ll:Str 'InputDialog'}" MouseLeftButtonDown="Move" Background="Transparent" ResizeMode="NoResize" Height="120" Width="300" WindowStyle="None">
    <Grid>
        <Border Background="White" CornerRadius="10">
            <StackPanel>
                <TextBlock FontWeight="Bold" Text="{ll:Str 'CUSTOM TEXT'}" Name="xCustomText" TextAlignment="Center" Margin="10"/>
                <TextBox x:Name="InputTextBox" Margin="10, 0" Style="{DynamicResource StandardTextBoxStyle}"/>
                <Button Content="OK" Margin="10" Click="OkButton" Background="{DynamicResource SecondaryLight}" BorderBrush="{DynamicResource SecondaryDark}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
