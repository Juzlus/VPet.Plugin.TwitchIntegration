                <Button IsEnabled="False" Click="ShowLayout" x:Name="LayoutButton" Grid.ColumnSpan="5" Grid.Row="5" Content="{ll:Str 'Show/Hide layout'}" Margin="10, 0, 10, 0" Padding="10, 0, 10, 0" Style="{DynamicResource ThemeButton}" />
